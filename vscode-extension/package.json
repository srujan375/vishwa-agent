{
  "name": "vishwa-autocomplete",
  "displayName": "Vishwa Autocomplete",
  "description": "AI-powered code autocomplete using Vishwa",
  "version": "0.1.0",
  "publisher": "vishwa",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Vishwa Autocomplete",
      "properties": {
        "vishwa.autocomplete.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Vishwa autocomplete"
        },
        "vishwa.autocomplete.autoTrigger": {
          "type": "boolean",
          "default": true,
          "description": "Automatically trigger suggestions while typing"
        },
        "vishwa.autocomplete.model": {
          "type": "string",
          "default": "gemma3:4b",
          "description": "LLM model to use for suggestions",
          "enum": [
            "gemma3:4b",
            "gpt-oss:20b-cloud",
            "deepseek-coder",
            "codestral",
            "claude-haiku-4-5",
            "gpt-4o-mini",
            "claude-sonnet-4-5",
            "gpt-4o",
            "zai-org/glm-4.6",
            "deepseek/deepseek-v3.2-exp",
            "moonshotai/kimi-k2-thinking",
            "minimax/minimax-m2"
          ],
          "enumDescriptions": [
            "Local model - Fast (50-150ms), Free",
            "Local model - Larger, better quality",
            "Local model - Code-specialized",
            "Local model - Mistral code model",
            "Cloud model - Fast Claude (~500ms)",
            "Cloud model - Fast OpenAI (~500ms)",
            "Cloud model - Balanced Claude (~1s)",
            "Cloud model - Most capable OpenAI (~2s)",
            "Novita - GLM-4.6 (128K context)",
            "Novita - DeepSeek v3.2 (64K context)",
            "Novita - Kimi K2 Thinking (128K context)",
            "Novita - MiniMax M2 (128K context)"
          ]
        },
        "vishwa.autocomplete.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Milliseconds to wait after typing before requesting suggestion (higher = fewer API calls)",
          "minimum": 100,
          "maximum": 2000
        },
        "vishwa.autocomplete.contextLines": {
          "type": "number",
          "default": 20,
          "description": "Number of lines of context before/after cursor",
          "minimum": 5,
          "maximum": 100
        },
        "vishwa.autocomplete.pythonPath": {
          "type": "string",
          "default": "auto",
          "description": "Path to Python executable. Use 'auto' to auto-detect from VS Code Python extension or system PATH"
        }
      }
    },
    "commands": [
      {
        "command": "vishwa.autocomplete.toggle",
        "title": "Vishwa: Toggle Autocomplete"
      },
      {
        "command": "vishwa.autocomplete.clearCache",
        "title": "Vishwa: Clear Autocomplete Cache"
      },
      {
        "command": "vishwa.autocomplete.showStats",
        "title": "Vishwa: Show Autocomplete Statistics"
      },
      {
        "command": "vishwa.autocomplete.showRLStats",
        "title": "Vishwa: Show RL Stats"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {}
}
